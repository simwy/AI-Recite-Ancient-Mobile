{
  "bsonType": "object",
  "required": ["title", "content"],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID"
    },
    "title": {
      "bsonType": "string",
      "description": "标题",
      "trim": "both"
    },
    "author": {
      "bsonType": "string",
      "description": "作者",
      "trim": "both"
    },
    "dynasty": {
      "bsonType": "string",
      "description": "朝代",
      "trim": "both"
    },
    "content": {
      "bsonType": "string",
      "description": "全文内容"
    },
    "created_by": {
      "bsonType": "string",
      "description": "添加用户ID",
      "trim": "both"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "添加时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "source": {
      "bsonType": "string",
      "description": "来源标记",
      "trim": "both"
    }
  }
}
